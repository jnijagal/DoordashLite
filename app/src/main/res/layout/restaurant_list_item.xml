<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/restaurant_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/restaurant_cover_image"
        android:layout_width="@dimen/item_image_width"
        android:layout_height="@dimen/item_image_height"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginStart="@dimen/item_margin_left" />

    <LinearLayout
        android:layout_width="@dimen/item_name_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:layout_marginStart="@dimen/item_margin_left"
        android:layout_marginTop="@dimen/item_margin_top"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_name_text_size" />

        <TextView
            android:id="@+id/restaurant_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_name_description"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/item_status_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/restaurant_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginEnd="@dimen/item_margin_right"
        android:layout_marginRight="@dimen/item_margin_right"
        android:layout_marginBottom="@dimen/item_margin_bottom"
        android:gravity="end"
        android:textSize="@dimen/item_status_text_size" />
</LinearLayout>